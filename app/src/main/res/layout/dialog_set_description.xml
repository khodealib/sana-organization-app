<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="end"
        android:text="توضیحات را وارد کنید"
        android:fontFamily="@font/font_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/et_description_text"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text_plain"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:hint="توضیحات فرآیند را وارد کنید"
        android:textSize="15sp"
        android:gravity="top|start"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/chb_null_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="عدم وجود توضیحات"
        android:layoutDirection="rtl"
        android:layout_gravity="end"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="بستن"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@color/primaryDarkColor"
        android:backgroundTint="@color/white" />


    <Button
        android:id="@+id/btn_complete_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تکمیل فرآیند" />

</LinearLayout>